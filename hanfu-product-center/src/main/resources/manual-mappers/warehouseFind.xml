    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="boss_id" jdbcType="INTEGER" property="bossId" />
    <result column="warehouse_id" jdbcType="INTEGER" property="warehouseId" />
    <result column="type_who" jdbcType="VARCHAR" property="typeWho" />
    <result column="user_id" jdbcType="VARCHAR" property="userId" />
    <result column="stone_id" jdbcType="INTEGER" property="stoneId" />
    <result column="product_id" jdbcType="INTEGER" property="productId" />
    <result column="good_id" jdbcType="INTEGER" property="goodId" />
    <result column="quantity" jdbcType="INTEGER" property="quantity" />
    <result column="type" jdbcType="INTEGER" property="type" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modify_time" jdbcType="TIMESTAMP" property="modifyTime" />
    <result column="is_deleted" jdbcType="TINYINT" property="isDeleted" />
  </resultMap>
  
  <resultMap id="HfInStorage" type="com.hanfu.product.center.model.HfInStorage">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="apply_id" jdbcType="INTEGER" property="applyId" />
    <result column="boss_id" jdbcType="INTEGER" property="bossId" />
    <result column="data_type" jdbcType="VARCHAR" property="dataType" />
    <result column="type" jdbcType="VARCHAR" property="type" />
    <result column="produc_id" jdbcType="INTEGER" property="producId" />
    <result column="good_id" jdbcType="INTEGER" property="goodId" />
    <result column="quantity" jdbcType="INTEGER" property="quantity" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="stone_id" jdbcType="INTEGER" property="stoneId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modify_time" jdbcType="TIMESTAMP" property="modifyTime" />
    <result column="is_deleted" jdbcType="TINYINT" property="isDeleted" />
  </resultMap>
  
  <resultMap id="HWarehouseResp" type="com.hanfu.product.center.model.HWarehouseResp">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="warehouse_id" jdbcType="INTEGER" property="warehouseId" />
    <result column="product_id" jdbcType="INTEGER" property="productId" />
    <result column="good_id" jdbcType="INTEGER" property="goodId" />
    <result column="quantity" jdbcType="INTEGER" property="quantity" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modify_time" jdbcType="TIMESTAMP" property="modifyTime" />
    <result column="is_deleted" jdbcType="TINYINT" property="isDeleted" />
  </resultMap>

	<select id="findWarehouseRespRecord" resultMap="WarehouseRespRecord">
		select * from warehouse_resp_record w left join hf_goods h on w.good_id=h.id
		where 1=1
		<if test="type == 0 || type != null and type != ''">
			and w.type = #{type}
		</if>
		<if test="warehousrId != null and warehousrId != ''">
			and w.warehouse_id = #{warehousrId}
		</if>
		<if test="goodName != null and goodName != ''">
			and h.hf_name like concat("%",#{goodName},"%")
		</if>
		<if test="start != null and start != '' and end != null and end != ''">
			and w.create_time &gt;= #{start} and create_time &lt;= #{end}
		</if>
		
	</select>
	
	<select id="findHfInStorage" resultMap="HfInStorage">
		select * from hf_in_storage h1 left join hf_goods h2 on h1.good_id=h2.id left join hf_category h3 on h2.category_id=h3.id
		where 1=1 and h1.data_type = #{data_type}
		 <if test="categoryName != null and categoryName != ''">
			and h3.hf_name like concat("%",#{categoryName},"%")
		</if>
		<if test="goodName != null and goodName != ''">
			and h2.hf_name like concat("%",#{goodName},"%")
		</if>
	</select>
	
	<select id="findHWarehouseResp" resultMap="HWarehouseResp">
		select * from hf_warehouse_resp h1 left join hf_goods h2 on h1.good_id=h2.id left join hf_category h3 on h2.category_id=h3.id
		where 1=1 and h1.warehouse_id = #{warehousrId}
		 <if test="categoryName != null and categoryName != ''">
			and h3.hf_name like concat("%",#{categoryName},"%")
		</if>
		<if test="goodName != null and goodName != ''">
			and h2.hf_name like concat("%",#{goodName},"%")
		</if>
	</select>
</mapper>
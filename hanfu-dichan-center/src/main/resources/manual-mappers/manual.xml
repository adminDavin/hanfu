<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.hanfu.dichan.center.manual.dao.ManualDao">

	<resultMap id="HfCategoryMap"
		type="com.hanfu.dichan.center.model.DcCategory">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="hf_name" property="hfName" jdbcType="VARCHAR" />
		<result column="parent_category_id" property="parentCategoryId"
			jdbcType="INTEGER" />
		<result column="level_id" property="levelId" jdbcType="INTEGER" />
		<result column="create_time" property="createTime"
			jdbcType="TIMESTAMP" />
		<result column="modify_time" property="modifyTime"
			jdbcType="TIMESTAMP" />
		<result column="is_deleted" property="isDeleted"
			jdbcType="SMALLINT" />
		<result column="file_id" property="fileId"
			jdbcType="INTEGER" />
	</resultMap>

	<select id="findCategoryByInfo" resultMap="HfCategoryMap">
		select * from dc_category where 1=1
		<if test=" levelId == 0 or (levelId != null and levelId != '')">
			and level_id = #{levelId}
		</if>
		<if test="hfName != null and hfName != ''">
			and hf_name like concat('%',#{hfName},'%') 
		</if>
		<if test="bossId != null and bossId != ''">
			and boss_id = #{bossId}
		</if>
	</select>
</mapper>